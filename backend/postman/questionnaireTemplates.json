{
  "claimType": "life",
  "claimOption": "channelling",
  "title": "Life Insurance - Channeling Claim Questionnaire",
  "description": "Complete questionnaire for doctor consultation (channeling) claims under life insurance policy",
  "sections": [
    {
      "title": "Consultation Details",
      "description": "Information about the consultation appointment",
      "order": 1,
      "questions": [
        {
          "questionId": "doctor_name",
          "questionText": "Name of the doctor consulted",
          "questionType": "text",
          "isRequired": true,
          "order": 1,
          "helpText": "Enter the full name of the consulting doctor",
          "validation": {
            "pattern": "^[A-Za-z .'-]+$",
            "message": "Doctor name can only include letters, spaces, and basic punctuation",
            "minLength": 2,
            "maxLength": 30
          }
        },
        {
          "questionId": "specialization",
          "questionText": "Doctor's specialization",
          "questionType": "select",
          "options": [
            "Cardiologist",
            "Dermatologist",
            "Pediatrician",
            "Psychiatrist",
            "Rheumatologist",
            "Urologist",
            "Ophthalmologist",
            "Dentist",
            "Other"
          ],
          "isRequired": true,
          "order": 2,
          "validation": {
            "message": "Specialization can only include letters, spaces, and punctuation"
          }
        },
        {
          "questionId": "consultation_date",
          "questionText": "Date of consultation",
          "questionType": "date",
          "isRequired": true,
          "order": 3,
          "validation": {
            "min": "1yAgo",
            "max": "today",
            "message": "Consultation date cannot be in the future"
          }
        },
        {
          "questionId": "consultation_reason",
          "questionText": "Reason for consultation",
          "questionType": "text",
          "isRequired": true,
          "order": 4,
          "helpText": "Briefly state the symptoms or reason for visiting",
          "validation": {
            "pattern": "^[A-Za-z0-9 ,.()-]+$",
            "message": "Reason can only include letters, numbers, spaces, and punctuation",
            "minLength": 3,
            "maxLength": 100
          }
        }
      ]
    },
    {
      "title": "Payment Information",
      "description": "Details related to the consultation payment",
      "order": 2,
      "questions": [
        {
          "questionId": "consultation_fee",
          "questionText": "Consultation fee amount",
          "questionType": "number",
          "isRequired": true,
          "order": 1,
          "helpText": "Enter the consultation fee paid in local currency",
          "validation": {
            "min": 1,
            "max": 100000,
            "message": "Fee must be between 1 and 100,000"
          }
        },
        {
          "questionId": "payment_method",
          "questionText": "Payment method used",
          "questionType": "select",
          "options": [
            "Cash",
            "Credit Card",
            "Debit Card",
            "Online Payment",
            "Other"
          ],
          "isRequired": true,
          "order": 2,
          "validation": {
            "message": "Please select a valid payment method"
          }
        },
        {
          "questionId": "documents",
          "questionText": "Upload the receipt for your doctor consultation payment",
          "questionType": "file",
          "isRequired": false,
          "order": 3,
          "helpText": "Upload payment receipt or doctor’s note if available",
          "validation": {
            "message": "Only PDF, JPG, or PNG files are allowed",
            "max": 5242880
          }
        }
      ]
    }
  ]
},




