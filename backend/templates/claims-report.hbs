<div class="table-section large-table cols-9">
    <h2 class="table-title">Insurance Claims</h2>
    <table class="data-table">
        <thead>
            <tr>
                <th>Claim Number</th>
                <th>Policy Number</th>
                <th>Claimant</th>
                <th>Claim Type</th>
                <th>Claim Amount</th>
                <th>Date Filed</th>
                {{!-- <th>Status</th>
                <th>Assigned Agent</th>
                <th>Settlement Date</th> --}}
            </tr>
        </thead>
    <tbody>
        {{#each claims}}
        <tr>
            <td>{{claimNumber}}</td>
            <td>{{policyNumber}}</td>
            <td>{{claimantName}}</td>
            <td>{{claimType}}</td>
            <td class="currency">Rs. {{formatCurrency claimAmount}}</td>
            <td>{{formatDate dateFiled}}</td>
            {{!-- <td><span class="status {{status}}">{{status}}</span></td>
            <td>{{agentName}}</td>
            <td>{{formatDate settlementDate}}</td> --}}
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

{{#if claimStats}}
<div class="page-break"></div>
<div class="table-section cols-6">
<h2 class="table-title">Claims Statistics</h2>
<table class="data-table">
    <thead>
        <tr>
            <th>Claim Type</th>
            <th>Total Claims</th>
            <th>Approved Claims</th>
            <th>Total Amount</th>
            <th>Average Settlement</th>
            <th>Approval Rate</th>
        </tr>
    </thead>
    <tbody>
        {{#each claimStats}}
        <tr>
            <td>{{claimType}}</td>
            <td>{{totalClaims}}</td>
            <td>{{approvedClaims}}</td>
            <td>Rs. {{formatCurrency totalAmount}}</td>
            <td class="currency">Rs. {{formatCurrency averageSettlement}}</td>
            <td>{{approvalRate}}%</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
{{/if}}

{{#if monthlyClaimTrends}}
<div class="table-section cols-6">
    <h2 class="table-title">Monthly Claims Trends</h2>
    <table class="data-table">
    <thead>
        <tr>
            <th>Month</th>
            <th>Claims Filed</th>
            <th>Claims Settled</th>
            <th>Amount Settled</th>
            <th>Average Processing Time (Days)</th>
        </tr>
    </thead>
    <tbody>
        {{#each monthlyClaimTrends}}
        <tr>
            <td>{{month}}</td>
            <td>{{claimsFiled}}</td>
            <td>{{claimsSettled}}</td>
            <td>Rs. {{formatCurrency amountSettled}}</td>
            <td>{{averageProcessingTime}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
{{/if}}

{{#if pendingClaims}}
<div class="table-section cols-7">
    <h2 class="table-title">Pending Claims (Requiring Attention)</h2>
    <table class="data-table">
    <thead>
        <tr>
            <th>Claim Number</th>
            <th>Claimant</th>
            <th>Days Pending</th>
            <th>Claim Amount</th>
            <th>Priority</th>
            <th>Assigned Agent</th>
        </tr>
    </thead>
    <tbody>
        {{#each pendingClaims}}
        <tr>
            <td>{{claimNumber}}</td>
            <td>{{claimantName}}</td>
            <td class="numeric">{{daysPending}}</td>
            <td class="currency">Rs. {{formatCurrency claimAmount}}</td>
            <td><span class="status {{priority}}">{{priority}}</span></td>
            <td>{{assignedAgent}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
{{/if}}