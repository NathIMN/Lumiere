<div class="table-section large-table cols-8">
    <h2 class="table-title">Employee Information</h2>
    <table class="data-table">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Role</th>
                {{#if (isEmployeeReport filters)}}
                <th>Department</th>
                {{/if}}
                <th>Hire Date</th>
                <th>Status</th>
                <th>Last Login</th>
            </tr>
        </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td class="id-col">{{userId}}</td>
            <td class="name-col">{{fullName}}</td>
            <td class="email-col">{{email}}</td>
            <td>{{role}}</td>
            {{#if (isEmployeeReport ../filters)}}
                <td>{{department}}</td>
            {{/if}}
            <td>{{formatDate hireDate}}</td>
            <td><span class="status {{status}}">{{status}}</span></td>
            <td>{{formatDate lastLogin}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

