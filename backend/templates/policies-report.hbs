<div class="table-section large-table cols-8">
    <h2 class="table-title">Insurance Policies</h2>
    <table class="data-table">
        <thead>
            <tr>
                <th>Policy Number</th>
                <th>Policy Type</th>
                <th>Beneficiaries Count</th>
                <th>Premium Amount</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th>Agent</th>
            </tr>
        </thead>
    <tbody>
        {{#each policies}}
        <tr>
            <td>{{policyNumber}}</td>
            <td>{{policyType}}</td>
            <td>{{beneficiariesCount}}</td>
            <td>${{formatCurrency premiumAmount}}</td>
            <td>{{formatDate startDate}}</td>
            <td>{{formatDate endDate}}</td>
            <td><span class="status {{status}}">{{status}}</span></td>
            <td>{{agentName}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

{{#if policyStats}}
<div class="page-break"></div>
<div class="table-section cols-6">
    <h2 class="table-title">Policy Statistics</h2>
    <table class="data-table">
    <thead>
        <tr>
            <th>Policy Type</th>
            <th>Active Policies</th>
            <th>Total Premium</th>
            <th>Average Premium</th>
            <th>Renewal Rate</th>
        </tr>
    </thead>
    <tbody>
        {{#each policyStats}}
        <tr>
            <td>{{policyType}}</td>
            <td>{{activePolicies}}</td>
            <td>${{formatCurrency totalPremium}}</td>
            <td>${{formatCurrency averagePremium}}</td>
            <td>{{renewalRate}}%</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
{{/if}}

{{#if monthlyTrends}}
<div class="table-section cols-6">
    <h2 class="table-title">Monthly Premium Trends</h2>
    <table class="data-table">
    <thead>
        <tr>
            <th>Month</th>
            <th>New Policies</th>
            <th>Premium Collected</th>
            <th>Renewals</th>
            <th>Cancellations</th>
        </tr>
    </thead>
    <tbody>
        {{#each monthlyTrends}}
        <tr>
            <td>{{month}}</td>
            <td>{{newPolicies}}</td>
            <td>${{formatCurrency premiumCollected}}</td>
            <td>{{renewals}}</td>
            <td>{{cancellations}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
{{/if}}

{{#if expiringPolicies}}
<div class="table-section cols-6">
    <h2 class="table-title">Policies Expiring Soon (Next 30 Days)</h2>
    <table class="data-table">
    <thead>
        <tr>
            <th>Policy Number</th>
            <th>Policyholder</th>
            <th>Expiry Date</th>
            <th>Premium Amount</th>
            <th>Days Until Expiry</th>
        </tr>
    </thead>
    <tbody>
        {{#each expiringPolicies}}
        <tr>
            <td>{{policyNumber}}</td>
            <td>{{policyholderName}}</td>
            <td>{{formatDate expiryDate}}</td>
            <td>${{formatCurrency premiumAmount}}</td>
            <td>{{daysUntilExpiry}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
{{/if}}